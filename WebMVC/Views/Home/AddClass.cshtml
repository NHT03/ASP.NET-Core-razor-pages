@using WebMVC.Core.Models
@model Class

@{
    ViewData["Title"] = "AddClass";
    var students = ViewBag.Students;
}

<h1>AddClass</h1>

<h4>Class</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddClass" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="studentIds" class="control-label"></label>
                <select name="studentIds" class="form-select" multiple aria-label="multiple select example">
                    @foreach (Student student in students)
                    {
                        <option value="@student.Id"> @student.Name</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Classes">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
